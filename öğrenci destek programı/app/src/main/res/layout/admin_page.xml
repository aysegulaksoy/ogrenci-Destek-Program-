<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin_page">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lay1">

        <Button
            android:id="@+id/kullanıcılar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kullanıcıları listele"
            android:fontFamily="sans-serif"
            android:textColor="#FFFFFF"
            android:textColorHint="#0B0B0B"
            android:textSize="20sp"
            android:typeface="normal"
            app:backgroundTint="#599F9A"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"

            />


    </RelativeLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/lay1"/>

    <Button
        android:id="@+id/liste"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="614dp"
        android:fontFamily="sans-serif"
        android:text="Kullanıcı listesini dışa aktar"
        android:textColor="#FFFFFF"
        android:textColorHint="#0B0B0B"
        android:textSize="20sp"
        android:typeface="normal"
        app:backgroundTint="#599F9A" />

</RelativeLayout>